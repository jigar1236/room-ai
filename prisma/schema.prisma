// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoomType {
  LIVING_ROOM
  BEDROOM
  KITCHEN
  BATHROOM
  DINING_ROOM
  OFFICE
  BALCONY
  OTHER
}

enum StyleType {
  MODERN_MINIMALIST
  SCANDINAVIAN
  INDUSTRIAL
  BOHEMIAN
  TRADITIONAL
  COASTAL
  MID_CENTURY_MODERN
  JAPANESE_ZEN
  CONTEMPORARY
  RUSTIC
  ART_DECO
  MEDITERRANEAN
  CUSTOM
}

enum GenerationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  PAST_DUE
}

enum CreditTransactionType {
  EARNED
  SPENT
  PURCHASED
  REFUNDED
  SUBSCRIPTION_BONUS
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?   // Hashed password for credentials provider
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts              Account[]
  sessions              Session[]
  projects              Project[]
  subscriptions        Subscription[]
  creditTransactions    CreditTransaction[]
  orders                Order[]
  teamsOwned            Team[]                @relation("TeamOwner")
  teamMemberships       TeamMember[]
  emailVerificationTokens EmailVerificationToken[]
  passwordResetTokens   PasswordResetToken[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expires   DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("email_verification_tokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expires   DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  rooms Room[]

  @@map("projects")
}

model Room {
  id          String   @id @default(cuid())
  name        String
  roomType    RoomType
  projectId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project      Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assets       Asset[]
  generations  Generation[]

  @@map("rooms")
}

model Asset {
  id          String   @id @default(cuid())
  roomId      String
  type        String   // "original" | "mask" | "generated" | "item_mask"
  blobUrl     String   @db.Text
  blobKey     String
  mimeType    String
  size        Int      // bytes
  width       Int?
  height      Int?
  metadata    Json?    // Additional metadata
  createdAt   DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@map("assets")
}

model Generation {
  id              String            @id @default(cuid())
  roomId          String
  mode            String            // "redesign" | "replace" | "moodboard" | "shopping_list"
  style           StyleType?
  roomType        RoomType
  status          GenerationStatus  @default(PENDING)
  creditsUsed     Int
  numVariations   Int               @default(4)
  keepFurniture   Boolean           @default(false)
  instructions    String?           @db.Text
  prompt          String?           @db.Text
  metadata        Json?             // AI response metadata
  errorMessage    String?           @db.Text
  startedAt       DateTime?
  completedAt     DateTime?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@map("generations")
}

model Subscription {
  id                    String             @id @default(cuid())
  userId                String
  razorpaySubscriptionId String?           @unique
  razorpayPlanId        String?
  status                SubscriptionStatus @default(ACTIVE)
  planName              String?
  monthlyCredits         Int                @default(0)
  currentPeriodStart    DateTime?
  currentPeriodEnd      DateTime?
  cancelAtPeriodEnd     Boolean            @default(false)
  cancelledAt           DateTime?
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model CreditTransaction {
  id          String                @id @default(cuid())
  userId      String
  type        CreditTransactionType
  amount      Int                   // Can be positive or negative
  description String?
  relatedId   String?               // Related subscription/order/generation ID
  createdAt   DateTime              @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("credit_transactions")
}

model Order {
  id              String   @id @default(cuid())
  userId          String
  razorpayOrderId String   @unique
  razorpayPaymentId String?
  amount          Int      // in paise (Razorpay currency unit)
  credits         Int
  status          String   // "pending" | "completed" | "failed"
  metadata        Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("orders")
}

model Team {
  id          String   @id @default(cuid())
  name        String
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner   User         @relation("TeamOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members TeamMember[]

  @@map("teams")
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      String   // "admin" | "member"
  createdAt DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@map("team_members")
}

